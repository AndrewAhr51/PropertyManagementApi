{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "SQLServerConnection": "Server=YOUR_SQL_SERVER;Database=PropertyManagement;Integrated Security=True;TrustServerCertificate=True;",
    "MySQLConnection": "Server=YOUR_MYSQL_SERVER;Port=3306;Database=propertymanagement;User ID=YOUR_USERNAME;Password=YOUR_PASSWORD;SslMode=Preferred;"
  },

  "JwtSettings": {
    "SecretKey": "YOUR_JWT_SECRET_KEY_MIN_32_BYTES",
    "Issuer": "YOUR_API_ISSUER",
    "Audience": "YOUR_API_AUDIENCE",
    "ExpirationMinutes": 60
  },

  "RoleSettings": {
    "DefaultRole": "Viewer",
    "AdminRole": "Admin",
    "ManagerRole": "Manager"
  },

  "CorsPolicy": {
    "AllowedOrigins": [ "https://yourdomain.com", "http://localhost:3000" ],
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE" ]
  },

  "SmtpSettings": {
    "Host": "YOUR_SMTP_HOST",
    "Port": 587,
    "EnableSsl": true,
    "Username": "YOUR_SMTP_USERNAME",
    "Password": "YOUR_SMTP_PASSWORD"
  },

  "EncryptionSettings": {
    "Key": "YOUR_ENCRYPTION_KEY",
    "IV": "YOUR_ENCRYPTION_IV"
  }
}