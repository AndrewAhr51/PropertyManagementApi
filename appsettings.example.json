{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "SQLServerConnection": "Server=YOUR_SERVER;Database=YOUR_DATABASE;Integrated Security=True;TrustServerCertificate=True;",
    "MySQLConnection": "Server=localhost;Port=3306;Database=YOUR_DATABASE;User ID=YOUR_USERNAME;Password=YOUR_PASSWORD;SslMode=Preferred;"
  },

  "JwtSettings": {
    "SecretKey": "YOUR-VERY-LONG-SECRET-KEY-AT-LEAST-32-BYTES-MINIMUM",
    "Issuer": "YOUR-API-ISSUER",
    "Audience": "YOUR-API-AUDIENCE", 
    "ExpirationMinutes": 60
  },

  "RoleSettings": {
    "DefaultRole": "Viewer",
    "AdminRole": "Admin",
    "ManagerRole": "Manager"
  },

  "CorsPolicy": {
    "AllowedOrigins": [ "https://example.com", "http://localhost:3000" ],
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE" ]
  },

  "SmtpSettings": {
    "Host": "YOUR_SMTP_HOST",
    "Port": 25,
    "EnableSsl": false,
    "Username": "YOUR_SMTP_USERNAME",
    "Password": "YOUR_SMTP_PASSWORD"
  },

  "EncryptionSettings": {
    "Key": "YOUR-32-CHARACTER-ENCRYPTION-KEY",
    "IV": "YOUR-16-CHARACTER-IV"
  },

  "PayPal": {
    "ClientId": "YOUR_PAYPAL_CLIENT_ID",
    "Secret": "YOUR_PAYPAL_SECRET"
  }
}